<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_weight="1">
		<TextView android:id="@android:id/empty" android:textSize="24dip"
			android:gravity="center" android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:text="No accounts exist." />
		<ListView android:id="@android:id/list" android:layout_width="fill_parent"
			android:paddingRight="5dip" android:layout_height="fill_parent" />
	</LinearLayout>
	<Spinner android:id="@+id/balance_spinner" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:entries="@array/p_balances" />
</LinearLayout>