<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" >
	<TextView android:id="@android:id/empty" android:layout_width="fill_parent"
		android:text="@string/loot_not_installed" android:layout_height="wrap_content"
		android:gravity="center" android:textSize="22dip" />
    <Button android:id="@+id/download" android:text="@string/download_loot"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_gravity="center" android:layout_marginTop="5dp" />
    <ListView android:id="@android:id/list" android:visibility="gone" 
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>
