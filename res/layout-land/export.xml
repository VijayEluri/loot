<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="horizontal">
		<TextView android:layout_height="wrap_content"
			android:textStyle="bold" android:id="@+id/account_text" android:text="@string/accounts"
			android:layout_width="wrap_content" android:layout_marginLeft="8dip"
			android:layout_gravity="center_vertical" />
		<Spinner android:layout_height="wrap_content" android:id="@+id/account_spinner"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:layout_marginLeft="30dip" />
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout04"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="horizontal">
		<TextView android:layout_height="wrap_content"
			android:textStyle="bold" android:layout_width="wrap_content"
			android:layout_marginLeft="8dip" android:text="@string/begin_date"
			android:id="@+id/begin_date_text" android:layout_gravity="center_vertical" />
		<LinearLayout android:id="@+id/LinearLayout05"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:gravity="right" android:layout_weight="1"
			android:layout_marginLeft="30dip">
			<EditText android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/begin_date_edit"
				android:layout_gravity="right" android:inputType="none"
				android:minWidth="196dip" />
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/ic_menu_today"
				android:layout_gravity="right" android:id="@+id/begin_date_button" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout03"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="horizontal">
		<TextView android:layout_height="wrap_content"
			android:textStyle="bold" android:layout_width="wrap_content"
			android:layout_marginLeft="8dip" android:text="@string/end_date"
			android:id="@+id/end_date_text" android:layout_gravity="center_vertical" />
		<LinearLayout android:id="@+id/LinearLayout06"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:gravity="right" android:layout_weight="1"
			android:layout_marginLeft="30dip">
			<EditText android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="right"
				android:id="@+id/end_date_edit" android:inputType="none"
				android:minWidth="196dip" />
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/end_date_button"
				android:src="@drawable/ic_menu_today" android:layout_gravity="right" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="horizontal">
		<TextView android:layout_height="wrap_content"
			android:textStyle="bold" android:id="@+id/format_text"
			android:layout_width="wrap_content" android:text="@string/formats"
			android:layout_marginLeft="8dip" android:layout_gravity="center_vertical" />
		<Spinner android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/format_spinner"
			android:entries="@array/file_formats" android:layout_weight="1"
			android:layout_marginLeft="30dip" />
	</LinearLayout>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="1" />
	<ImageButton android:id="@+id/export_button" android:text="@string/export"
		android:textSize="22dip" android:layout_height="wrap_content"
		android:background="@drawable/gradient_button" android:layout_width="fill_parent"
		android:src="@drawable/action_export" />
</LinearLayout>
