<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.gumbercules.loot" android:versionName="2.0.2"
	android:versionCode="35">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:label="@string/app_name"
			android:launchMode="singleTask" android:clearTaskOnLaunch="true"
			android:name="net.gumbercules.loot.AccountChooser" />
		<activity android:name="net.gumbercules.loot.TransactionActivity" />
		<activity android:name="net.gumbercules.loot.TransactionEdit" />
		<activity android:name="net.gumbercules.loot.AccountEdit" />
		<activity android:name="net.gumbercules.loot.RepeatActivity" />
		<activity android:name="net.gumbercules.loot.SettingsActivity" />
		<activity android:launchMode="singleTask" android:label="@string/app_name"
			android:clearTaskOnLaunch="true" android:name="net.gumbercules.loot.PinActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="net.gumbercules.loot.DonateActivity" />
		<provider android:authorities="net.gumbercules.loot.transactionprovider"
			android:name="net.gumbercules.loot.TransactionProvider" />
		<provider android:name="net.gumbercules.loot.AccountProvider"
			android:authorities="net.gumbercules.loot.accountprovider" />
		<activity android:name="net.gumbercules.loot.PremiumNotFoundActivity" />
		<activity android:name="net.gumbercules.loot.AboutActivity">
			<intent-filter>
				<action android:name="net.gumbercules.loot.intent.action.ABOUT" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="net.gumbercules.loot.ChangeLogActivity" />
	</application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-sdk android:minSdkVersion="3" />
</manifest> 
